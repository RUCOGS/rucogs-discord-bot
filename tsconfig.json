{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "strict": true,
    "noErrorTruncation": true,
    "allowJs": true,
    "maxNodeModuleJsDepth": 10,
    "paths": {
      "@src/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@commands/*": ["src/commands/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
